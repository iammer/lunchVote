doctype html
html(lang='en', class='no-js')
	head
		meta(charset='UTF-8')
		meta(name='viewport',content='width=device-width, initial-scale=1.0')
		title= pageTitle
		link(rel='stylesheet', href='/css/foundation/normalize.css', type='text/css')
		link(rel='stylesheet', href='/css/foundation/foundation.css', type='text/css')

		script(src='/js/modernizr/modernizr.js', type='text/javascript')
		script(src='/js/jquery/jquery.js', type='text/javascript')
		script(src='/js/jquery.behavior/jquery.livequery.js', type='text/javascript')
		script(src='/js/jquery.behavior/jquery.behavior.js', type='text/javascript')
		script(src='/js/foundation/foundation.min.js', type='text/javascript')

		block head

	body
		nav.top-bar(data-topbar)
			ul.title-area
				li.name
					h1: a(href='#')= pageTitle
				li.toggle-topbar.menu-icon: a(href='#'): span Menu

			section.top-bar-section
				ul.right
					li.active: a(href='#') Active Thing
					li.has-dropdown
						a(href='#') Dropdown
						ul.dropdown
							each item in [1, 2, 3, 4, 5]
								li: a(href='#')= 'Item: ' + item

				ul.left
					li: a(href='#') Left Nav
		.pageMain
			block body

